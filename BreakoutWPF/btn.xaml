<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="BreakoutWPF.btn"
	x:Name="UserControl" Width="286" Height="44">
	<Grid x:Name="LayoutRoot">
		<Image x:Name="imgMain" Source="images\btn_depressed.png" Stretch="Fill" MouseEnter="imgMain_MouseEnter" MouseLeave="imgMain_MouseLeave" MouseDown="imgMain_MouseDown" MouseUp="imgMain_MouseUp"/>
        <TextBlock x:Name="txbCaption" FontFamily="Cooper Std" FontSize="36" TextAlignment="Left" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False" />
	</Grid>
</UserControl>